<Window x:Class="QuizApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Manager" Height="450" Width="800">
    <Grid>
        <!-- DataGrid to display quiz questions -->
        <DataGrid x:Name="QuizDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,50" AutoGenerateColumns="True" Height="300"/>

        <!-- Buttons for Add, Edit, Delete -->
        <Button Content="Add Question" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10,0,0,10" Click="AddButton_Click"/>
        <Button Content="Edit Question" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="120,0,0,10" Click="EditButton_Click"/>
        <Button Content="Delete Question" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="230,0,0,10" Click="DeleteButton_Click"/>
    </Grid>
</Window>
